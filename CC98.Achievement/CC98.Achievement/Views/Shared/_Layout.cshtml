@{
	ViewBag.PageTitle ??= ViewBag.Title;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewBag.PageTitle - CC98 成就系统</title>

	<link rel="icon" href="~/icon.svg" />

	<link rel="stylesheet" href="~/lib/semantic-ui/semantic.min.css" />
	<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

	@await RenderSectionAsync("Header", false)

</head>
<body>
	<header>

		<div class="ui menu">
			<div class="ui container">
				<div class="header item">CC98 成就系统</div>
				<a class="item" asp-controller="Achievement" asp-action="Index">成就一览</a>
				<div class="ui dropdown item" asp-authorize-policy="@Policies.Edit">
					<span class="text">管理</span>
					<i class="dropdown icon"></i>
					<div class="menu">

						<a class="item" asp-controller="Achievement" asp-action="Manage">成就</a>
						<a class="item" asp-controller="Category" asp-action="Manage">分类</a>

						<authorize policy="@Policies.Admin">
							<div class="ui divider"></div>
							<a class="item" asp-controller="Manage" asp-action="SystemSetting">系统设置</a>
						</authorize>

					</div>
				</div>

				<div class="right menu">
					<partial name="_LogOnPartial" />
				</div>

			</div>

		</div>
	</header>
	<div class="ui main container">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<footer>
		<div class="ui divider"></div>
		<div class="ui container center aligned">
			<span>&copy; 2023 - CC98 成就系统</span>
		</div>
	</footer>

	<script src="~/lib/jquery/jquery.min.js"></script>
	<script src="~/lib/semantic-ui/semantic.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", false)

</body>
</html>
