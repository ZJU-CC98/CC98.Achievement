@model UserSearchModel
@{
	var category = (AchievementCategory)ViewBag.Category;
}

<form method="get" role="search" class="row mx-2 g-2 align-items-center">
	<div class="ui mini menu">

		<div class="item"><label asp-for="Keyword">成就名称</label></div>
		<div class="item">
			<div class="ui input">
				<input asp-for="Keyword" class="form-control" type="search" />
			</div>
		</div>
		<div class="item"><label asp-for="State">成就类型</label></div>
		<div class="item">
			<select asp-enum-for="State" class="ui dropdown" asp-text-source="ShortName" asp-option-label="(全部)"></select>
		</div>

		<div class="item"><label asp-for="CompleteState">完成状态</label></div>
		<div class="item">
			<select asp-enum-for="CompleteState" class="ui dropdown" asp-text-source="ShortName" asp-option-label="(全部)"></select>
		</div>

		<div class="item">
			<button type="submit" class="ui button">筛选</button>
		</div>
		<div class="item">
			<a asp-controller="Achievement" asp-action="List" asp-route-category="@category.CodeName" type="reset" class="ui button">重置</a>
		</div>
	</div>
</form>