@model AchievementSearchModel

<form method="get" role="search" class="row mx-2 g-2 align-items-center">
	<div class="ui mini menu">
		<div class="item"><label asp-for="CategoryCodeName">分类</label></div>
		<div class="item">
			<vc:category-selector asp-for="CategoryCodeName" allow-null="true" />
		</div>
		<div class="item"><label asp-for="CodeName">代码名称</label></div>
		<div class="item">
			<div class="ui input">
				<input asp-for="CodeName" class="ui input" type="search"/>
			</div>
		</div>
		<div class="item"><label asp-for="Keyword">显示名称</label></div>
		<div class="item">
			<div class="ui input">
				<input asp-for="Keyword" class="form-control" type="search"/>
			</div>
		</div>
		<div class="item"><label  asp-for="State">类型</label></div>
		<div class="item">
			<select asp-enum-for="State" class="ui dropdown" asp-text-source="ShortName" asp-option-label="(全部)"></select>
		</div>
		<div class="item">
			<button type="submit" class="ui button">筛选</button>
		</div>
		<div class="item">
			<a asp-controller="Achievement" asp-action="Manage" type="reset" class="ui button">重置</a>
		</div>
	</div>
</form>